<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
              http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="default" >
    <class>com.rentcar.Models.Personne</class>
    <class>com.rentcar.Models.Adresse</class>
    <class>com.rentcar.Models.Agence</class>
    <class>com.rentcar.Models.CategorieCarburant</class>
    <class>com.rentcar.Models.CategorieVehicule</class>
    <class>com.rentcar.Models.Client</class>
    <class>com.rentcar.Models.Devis</class>
    <class>com.rentcar.Models.ProgrammeFidelite</class>
    <class>com.rentcar.Models.Vehicule</class>
    <class>com.rentcar.Models.Employe</class>
      <class>com.rentcar.Models.Facture</class>
      <properties>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres"/>
      <property name="hibernate.connection.username" value="postgres"/>
      <property name="hibernate.connection.password" value="postgres"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
      <property name="hibernate.default_schema" value="public"/>
      <property name="hibernate.id.new_generator_mappings" value="false"></property>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
